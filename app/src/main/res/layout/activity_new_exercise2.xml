<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/newexercisebackground"
    tools:context=".NewExercise">

    <TextView
        android:id="@+id/lbl_new_exercise"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="321dp"
        android:layout_height="66dp"
        android:layout_marginTop="44dp"
        android:autoText="false"
        android:freezesText="false"
        android:text="NEW EXERCISE"
        android:textColor="#97FFFFFF"
        android:textSize="24sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="356dp"
        android:layout_height="494dp"
        android:layout_marginStart="31dp"
        android:layout_marginLeft="31dp"
        android:layout_marginEnd="31dp"
        android:layout_marginRight="31dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_new_exercise"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/LBL_name"
            android:layout_width="59dp"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="#97FFFFFF"
            android:textSize="18sp"
            app:layout_column="0"
            app:layout_row="0" />

        <EditText
            android:id="@+id/INP_name"
            android:layout_width="199dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="#97FFFFFF"
            app:layout_column="1"
            app:layout_row="0" />

        <TextView
            android:id="@+id/LBL_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textColor="#97FFFFFF"
            android:textSize="18sp"
            app:layout_column="0"
            app:layout_row="1" />

        <EditText
            android:id="@+id/INP_description"
            android:layout_width="199dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:textColor="#97FFFFFF"
            app:layout_column="1"
            app:layout_row="1" />

        <TextView
            android:id="@+id/LBL_explanatory_video"
            android:layout_width="153dp"
            android:layout_height="wrap_content"
            android:text="Explanatory video"
            android:textColor="#97FFFFFF"
            android:textSize="18sp"
            app:layout_column="0"
            app:layout_row="2" />

        <EditText
            android:id="@+id/INP_explanatory_video"
            android:layout_width="199dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:textColor="#97FFFFFF" />

    </androidx.gridlayout.widget.GridLayout>

    <Button
        android:id="@+id/BTN_save"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:onClick="addExercise"
        android:text="+"
        android:textSize="36sp"
        app:backgroundTint="#00000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.946" />
</androidx.constraintlayout.widget.ConstraintLayout>